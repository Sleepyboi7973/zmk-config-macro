/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";

        col-gpios
            = <&gpio 16 GPIO_ACTIVE_HIGH>
            , <&gpio 17 GPIO_ACTIVE_HIGH>
            , <&gpio 18 GPIO_ACTIVE_HIGH>
            ;

        row-gpios
            = <&gpio 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};